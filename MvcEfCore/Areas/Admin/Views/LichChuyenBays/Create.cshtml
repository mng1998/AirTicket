@model MvcEfCore.Models.LichChuyenBay

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Share/_AdminLayout.cshtml";
}
<h2>Create</h2>

<h4>LichChuyenBay</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChuyenBayID" class="control-label"></label>
                <input asp-for="ChuyenBayID" class="form-control" />
                <span asp-validation-for="ChuyenBayID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayGioBay" class="control-label"></label>
                <input asp-for="NgayGioBay" class="form-control" />
                <span asp-validation-for="NgayGioBay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaVe" class="control-label"></label>
                <input asp-for="GiaVe" class="form-control" />
                <span asp-validation-for="GiaVe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianBay" class="control-label"></label>
                <input asp-for="ThoiGianBay" class="form-control" />
                <span asp-validation-for="ThoiGianBay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessClass" class="control-label"></label>
                <input asp-for="BusinessClass" class="form-control" />
                <span asp-validation-for="BusinessClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EconomyClass" class="control-label"> So Ghe Hang 2</label>
                <input asp-for="EconomyClass" class="form-control" />
                <span asp-validation-for="EconomyClass" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChiTietTrungGians.Single().SanBayId" class="control-label">From:</label>
                <select asp-for="ChiTietTrungGians.Single().SanBayId" class="form-control" name="SanBayDi" asp-items="@(new SelectList(ViewBag.SanBayId, "SanBayId", "TenSanBay"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ChiTietTrungGians.Single().SanBayId" class="control-label">To:</label>
                <select asp-for="ChiTietTrungGians.Single().SanBayId" name="SanBayDen" class="form-control" asp-items="@(new SelectList(ViewBag.SanBayId, "SanBayId", "TenSanBay"))"></select>
            </div>

            @for (int i = 1; i <= ViewBag.TS2; i++)
            {
                <div class="form-group">
                    <label asp-for="ChiTietTrungGians.Single().SanBayId" class="control-label">Transis @i</label>
                    <select asp-for="ChiTietTrungGians.Single().SanBayId" name="TramDung[]" class="form-control" asp-items="@(new SelectList(ViewBag.SanBayId, "SanBayId", "TenSanBay"))"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ChiTietTrungGians.Single().ThoiGian" class="control-label">Delay Time: @i</label>
                    <input asp-for="ChiTietTrungGians.Single().ThoiGian" name="ThoiGianDung[]" class="form-control" />
                    <span asp-validation-for="ChiTietTrungGians.Single().ThoiGian" class="text-danger"></span>
                </div>
             
                <div class="form-group">
                    <label asp-for="ChiTietTrungGians.Single().GhiChu" class="control-label">Ghi Chú @i</label>
                    <input asp-for="ChiTietTrungGians.Single().GhiChu" name="GhiChu[]" class="form-control" />
                    <span asp-validation-for="ChiTietTrungGians.Single().GhiChu" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input id="button" type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
