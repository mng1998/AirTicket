                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="email" class="form-control mt-2" placeholder="Email" required>

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">

                            </div>
                        </div>
