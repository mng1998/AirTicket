                                <input type="text" class="form-control mt-2" placeholder="Số điện thoại" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Lời nhắn..." rows="3" required></textarea>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">

                            </div>
                        </div>
