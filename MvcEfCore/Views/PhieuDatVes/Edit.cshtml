@model MvcEfCore.Models.PhieuDatVe

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="hero-wrap js-fullheight" style="background-image: url('../../images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">

    </div>
    <div class="container">
        <br />
        <br />
        <br />

        <br />
        <div class="card container-fluid" style="width:500px">


            <h2>Change your information</h2>
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PhieuDatVeID" />
                        <div class="form-group">
                            <label asp-for="PhieuDatVeID" class="control-label">Booking ID</label>
                            <input asp-for="PhieuDatVeID" asp-items="ViewBag.KhachHangID" class="form-control" readonly />
                            <span asp-validation-for="PhieuDatVeID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ChuyenBayID" class="control-label">Flight ID</label>
                            <input asp-for="ChuyenBayID" class="form-control" asp-items="ViewBag.ChuyenBayID" readonly />
                            <span asp-validation-for="ChuyenBayID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="KhachHangID" class="control-label">Customer ID</label>
                            <input asp-for="KhachHangID" asp-items="ViewBag.KhachHangID" class="form-control" readonly />
                            <span asp-validation-for="KhachHangID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HangID" class="control-label">Seat Class</label>
                            <select asp-for="HangID" class="form-control" asp-items="ViewBag.HangID"></select>
                            <span asp-validation-for="HangID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" onclick="alert('You have changed information successfully. Thank you!')" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>

            <a asp-action="Index">Back to List</a>
        </div>
        
    </div>

</div>


